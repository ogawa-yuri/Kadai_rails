<p id="notice"><%= notice %></p>

<h1>Pictures</h1>

<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th>picture</th>
        <th>Title</th>
        <th>Content</th>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

  <tbody>
    <% @pictures.each do |picture| %>
    <tr>
        <td><%= image_tag picture.picture.url %></td>
        <td><%= picture.title %></td>
        <td><%= picture.content %></td>
        <td><%= picture.user.name %></td>
        <td><%= link_to 'Show', picture %></td>
        <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
        <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
